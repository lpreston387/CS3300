<p style="color: green"><%= notice %></p>

<div class="container">
<h1>Projects</h1>

<div id="projects">
  <% @projects.each do |project| %>
    <%= render project %>
    <p>
      <%= link_to "Show this project", project, :class => "btn btn-lg btn secondary" if user_signed_in?%> 
    </p>
  <% end %>
</div>

<%= link_to "New project", new_project_path, :class => "btn btn-lg btn secondary" if user_signed_in?%> 

</div>