<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="card w-50 blue-grey darken-4 mb-2">
  <div class="card-body">
    <div class="form-group ">
      <p><label style="color: cyan" for="title">Title</label><p>
      <input type="title" class="form-control" id="title" aria-describedby="emailHelp" <%= form.text_field :title%>
    </div>
  </div>
</div>

<div class="card w-75 blue-grey darken-4">
  <div class="card-body">
    <div class="form-group">
      <p><label style="color: cyan" for="description">Description</label><p>
      <textarea class="form-control" id="description" rows="5" cols="100" <%= form.text_area :description %>  </textarea>  
    </div>
  </div>

  <div>
    <button type="button" class="btn btn-outline-info"><%= form.submit %></button>
  </div>

</div>
 




<% end %>



