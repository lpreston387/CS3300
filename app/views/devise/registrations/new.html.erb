<div class="px-4 pt-5  text-center border-bottom border top cyan darken-1">
<h1 class="display-4 fw-bold">Welcome</h1>
<div class="col-lg-6 mx-auto">
  <p class="lead mb-4">Hello! Use this page to create an account</p>
</div>
<div class="overflow-hidden" style="max-height: 30vh;">
  <div class="container px-5">
  </div>
</div>
</div>



<section class="col d-flex justify-content-center">
  <div class="container-fluid grey ">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="card mt-5 mb-5 grey darken-4">
        <div class="card-header mx-auto " >

          <h1 style="color:cyan;" class="display-4 fw-bold">Create Account Here</h1>
        </div>
        
          <div class="card-body grey darken-3 mx-auto my-5">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, "Email Address", class: "sr-only btn btn-outline-info" %>

            </div>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control-lg brown", placeholder: "Enter Email Address" %>
            </div>


            <div class="field mt-4">
            <%= f.label :password, "Password", class: "sr-only btn btn-outline-info" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control-lg brown", placeholder: "Enter Password"  %>
            </div>

          <div class="field mt-4">
            <%= f.label :password_confirmation, "Confirm Password", class: "sr-only btn btn-outline-info" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control-lg brown", placeholder: "Enter Password"  %>
          </div>




            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-lg btn-outline-info btn-block mt-4" %>
            </div>


            <% end %>

          </div>
        
      </div>


    </div> 
  </div>
</section>

